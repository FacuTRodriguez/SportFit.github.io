<!DOCTYPE html>
<html lang="es">
  <%- include('./partials/head', {
    title : "SportFit"
  }) %>

  <body class="home">
    <%- include('./partials/header') %>
    <main class="main__home">
      
      <% if (products.length) { %>
        <div class="swiper mySwiper_1">
          <!-- Additional required wrapper -->
          <div class="swiper-wrapper">
            <!-- Slides -->
            <div class="swiper-slide swiper-slide_1">
              <img src="/images/banner1.jpg" alt="" />
            </div>
            <div class="swiper-slide swiper-slide_1">
              <img src="/images/banner2.jpg" alt="" />
            </div>
            <div class="swiper-slide swiper-slide_1">
              <img src="/images/banner3.jpg" alt="" />
            </div>
            <div class="swiper-slide swiper-slide_1">
              <img src="/images/banner4.jpg" alt="" />
            </div>
            <div class="swiper-slide swiper-slide_1">
              <img src="/images/banner5.jpg" alt="" />
            </div>
          </div>
          <!-- If we need pagination -->
          <div class="swiper-pagination"></div>
  
          <!-- If we need navigation buttons -->
          <div class="swiper-button-prev swiper-button-prev_1"></div>
          <div class="swiper-button-next swiper-button-next_1"></div>
          <div class="swiper-button-next swiper-button-next_1"></div>
          <div class="swiper-button-next swiper-button-next_1"></div>
          <div class="swiper-button-next swiper-button-next_1"></div>
  
          <!-- If we need scrollbar -->
          <div class="swiper-scrollbar"></div>
        </div>
       
     

      <div class="home__products">
        <% products.forEach(product => { %>
        <article class="home__article">
          <a href="/products/detail/<%= product.id %>">
            <img
              src="/images/<%= product.image || 'Imagen_por_defecto.jpg'  %>"
              alt="<%= product.nombre %>"
            />
            <div class="home__article__info">
              <h2><%= product.nombre %></h2>
              <p>$<%= product.precio %></p>
              <p><%= product.descripcion %></p>
            </div>
          </a>
        </article>
        <% }) %>
      </div>
      <% } else { %>
        <div class="alert alert-light" role="alert">
          Producto no encontrado, intente con otra busqueda        
        </div>



        

      <% }%>
     

    </main>

    <%- include('./partials/scripts') %>

    <%- include('./partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script>
      const swiper_1 = new Swiper(".mySwiper_1", {
        // If we need pagination
        pagination: {
          el: ".swiper-pagination",
          clickable: true,
        },

        // Navigation arrows
        navigation: {
          nextEl: ".swiper-button-next_1",
          prevEl: ".swiper-button-prev_1",
        },
      });
    </script>
  </body>
</html>
